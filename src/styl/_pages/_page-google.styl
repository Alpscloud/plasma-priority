.page-alternate
	.promo-slider
		.slider__pagination
			.swiper-pagination-bullet
				border-color $secondary-color
				&-active
					background-color $secondary-color
					
	.sect-title
		text-transform uppercase
		margin-bottom 50px
		
	.sect__team
		position relative
		z-index 2
	
	.team-members__row
		margin-bottom 55px
		
	.team-member
		font-size 14px
		height 100%
		&__wrapper
			margin-bottom 30px
		&__information
			width auto
			flex 1
			padding-left 19px
		&__name
			color $secondary-color
			font 16px $CBold
			margin-bottom 16px
		&__photo
			padding-top 0
			width 170px
			min-height auto
			flex none
			border-radius 8px 8px 8px 0
			img
				visibility visible
				clip auto
				opacity 1
				z-index 1
		

.what-we-treating
	&__img
		border-radius 12px 0 0 12px
		padding-top 0
		width 50%
	&__content
		width 50%
		padding-left 50px
		display flex
		flex-direction column
		justify-content space-between
		font-size 20px
		
		.content
			max-width 610px

	&__slogan
		margin-top 35px
		background-color #fdf7f2
		font 40px $CBold
		color $alternate-accent-color
		padding 40px 0 40px 55px
		border-radius 100px 0 0 100px
		position relative
		&:before
			pseudo()
			position absolute
			width 100%
			height 100%
			background-color inherit
			left 100%
			margin-left -1px
			top 0
			border-radius 0 100px 100px 0
			
.sect__service
	
	font-size 16px
	&:nth-child(odd)
		background-color #f3f6f9
		.accordion-item
			background-color $basic-white-color
		
	&--subtitle
		font-size 18px
		color rgba($basic-black-color, .6)
		margin-bottom 40px
	
	.sect-title
		color $secondary-color
		margin-bottom 40px
		&-sm-gutter
			margin-bottom 30px
			
	.accordion-item
		background-color #f6f8fb
	
	.treatment
		margin-top 40px
	.accordion-title
		text-transform none
		

.service-notice
	margin-top 34px
	font 14px $GBoldItalic
	position relative
	padding-left 50px
	line-height 1.6
	&:before
		pseudo()
		position absolute
		top 4px
		left 0
		width 30px
		height 30px
		background url('../img/icons/svg/warning-circle.svg') no-repeat / contain