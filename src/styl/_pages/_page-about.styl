.gallery-slider
	position relative
	.about-us__slide
		height auto
		padding-top 100%
		
	.slider__pagination
		margin-top 40px
		
	.btn__arrow
		position absolute
		vertical-center()
		z-index 1
		margin-top -30px
		box-shadow  0px 5px 20px 0px rgba(0, 0, 0, 0.15)
		&--next
			right -30px
			transform translateY(-50%) scaleX(-1)
		&--prev
			left -30px
			
.page-inner__content
	.advantage__ic
		background-color $light-color-bg