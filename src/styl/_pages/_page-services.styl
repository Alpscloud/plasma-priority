.page-service
	flex 1

.tab-controls
	margin-bottom 50px
	display flex
	flex-wrap nowrap
	margin-left -4px
	margin-right -4px
	&__btn
		margin 0 4px
		flex 1
		padding 20px 10px
		

.service-step
	position relative
	&__count
		flex-col-center()
		position absolute
		width 50px
		height 50px
		border-radius 50%
		text-align center
		background-color $secondary-color
		left 25px
		z-index 1
		top -25px
		color $basic-white-color
		
	&__wrapper
		margin-bottom 40px
		padding-top 30px
	&__img
		display block
		padding-top 100%
		border-radius 16px 0
		margin-bottom 15px
		

.doctor-blockquote
	margin-top 50px
	display flex
	align-items flex-start
	justify-content flex-start
	&__information
		flex none
		margin-right 30px
		max-width 200px
		flex none
		&--photo
			padding-top 0
			width 100px
			height 120px
			border-radius 16px 0
			margin-bottom 7px
		&--name
			font-family $CBold
			
	&__text
		flex 1
		font-family $GBoldItalic
		position relative
		padding 30px
		background url('../img/icons/svg/quote.svg')  top left  no-repeat / 30px, url('../img/icons/svg/quote.svg')  bottom right  no-repeat / 30px
		

.advantage-column
	flex-direction column
	justify-content center
	align-items center
	text-align center
	// p
	// 	font-family $CBold
		
	b
		color $alternate-accent-color
	
	.advantage__ic
		margin-right 0
		margin-bottom 20px
		background-size 45px 45px
		width 70px
		height 70px
		background-color #eaf5f4
		


.service-information
	margin-top 40px
	&__item
		display flex
		align-items flex-start
		flex-wrap nowrap
		justify-content flex-start
		&--ic
			flex none
			width 45px
			height 45px
			background-position 50% 50%
			background-repeat no-repeat
			background-size 30px
			margin-right 10px
			border-radius 50%
			background-color #eaf5f4
			box-shadow 0px 5px 25px 0px rgba($secondary-color, 0.15)
		&--text
			&_val
				font-size 16px
				color $basic-black-color
				color $alternate-accent-color
			&_title
				font-family $CBold
				font-size 12px
		&--wrapper
			margin-bottom 30px
			

.service-content__block
	margin-bottom 50px
	&:last-child
		margin-bottom 0
		
.service-content__steps
	font-size 16px
	margin-bottom 30px
	li
		display block
		margin-bottom 20px
		&:last-child
			margin-bottom 0
	span
		display block
		position relative
		padding-left 20px
		line-height 1.25
		&:before
			pseudo()
			position absolute
			top 7px
			left 0
			width 4px
			height 4px
			border-radius 50%
			background-color $secondary-color
			

	a
		display inline-block
		width 50%
		border-radius 10px
		box-shadow 0 5px 20px 0 rgba(0,0,0, 15%)
		margin-top 10px
		
.service-content__step--video
	padding-left 0 !important
	margin-top 10px
	&:before
		display none !important
		
	iframe
		display block
		width 100%
		height 350px
		border-radius 10px
		box-shadow 0 5px 20px 0 rgba(0,0,0, 15%)
		
			
.service-advantages
	li
		display block
		margin-bottom 20px
		padding-left 60px
		position relative
		font-size 16px
		
		b, strong
			color #d95900
		&:last-child
			margin-bottom 0
		&:before
			pseudo()
			width 40px
			height 40px
			border-radius 50%
			background-image url('../img/icons/svg/badge.svg')
			background-color $basic-white-color
			background-position 50% 50%
			background-repeat no-repeat
			background-size 20px 20px
			box-shadow 0px 5px 25px 0px rgba($secondary-color, 0.15)
			position absolute
			left 0
			top -4px
			

.service-table
	margin-bottom 30px
	border-radius 10px
	overflow hidden
	table
		width 100%
		table-layout fixed
		border-top-left-radius 10px
		border-top-right-radius 10px
		font-size 16px
		td
			padding 10px 30px
			border-right 2px solid $basic-white-color
			&:last-child
				border-right none
		tr
			&:nth-child(odd)
				background-color rgba($light-accent-color, .7)
			&:nth-child(even)
				background-color #eaf5f4
		tr
			&:first-child
				text-align center
				color $basic-white-color
				text-transform uppercase
				font 18px $CBold
				
				
				td
					padding 20px
					&:first-child
						background-color $secondary-color
					&:last-child
						background-color $alternate-accent-color
						

.subservice
	margin-bottom 30px
	&:last-child
		margin-bottom 0
	
	img
		display block
		margin 30px 0
		border-radius 12px
		width auto
		max-width 100%
		box-shadow  0px 5px 20px 0px rgba(0, 0, 0, 0.15)
			