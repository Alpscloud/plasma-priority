.team
	&-member
		&__photo
			flex 1
			width 100%
			max-width 370px
			margin-right 30px
			
			img
				display block
				border-radius 12px
				width 100%
				margin-bottom 30px
				
			.btn
				width 100%
				padding-left 	15px
				padding-right 	15px
				max-width 100%
				
		&__content
			flex 1
			
			
		&__name
			color $secondary-color
			margin-bottom 20px
			
		&__position
			font 18px $GMed
			margin-bottom 45px
			
		&__sertificates
			
			margin-top 40px
			.row
				margin-left -5px
				margin-right -5px
			.sect-title-sm
				color $secondary-color
				
		&__sertificate
			box-shadow 0px 5px 20px 0px rgba(0, 0, 0, 0.15)
			&--wrapper
				padding 5px