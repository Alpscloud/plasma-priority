.phone-link
	display inline-block
	position relative
	padding-left 100px
	font-size 24px
	color inherit
	&:hover
		color $accent-color
	&__ic
		display inline-block
		position absolute
		left 0
		vertical-center()
		width 70px
		height 70px
		border-radius 50%
		background $basic-white-color url('../img/icons/svg/phone.svg') 50% 50% no-repeat / 70px 70px
		

.mobile-phone-link
	display none
	width 50px
	height 50px
	border-radius 50%
	background $accent-color url('../img/icons/svg/phone-ic.svg') 50% 50% no-repeat / 20px 20px
	margin-left 15px
		

.img-wrapper
	position relative
	overflow hidden
	img
		display block
		position absolute
		position-center()
		object-fit cover
		width 100%
		height 100%
		

.socials
	font-size 0
	&__item
		display inline-block
		margin-right 30px
		&:last-child
			margin-right 0
			
	&__link
		display block
		width 32px
		height 32px
		border-radius 50%
		background-position 50% 50%
		background-size 30px 30px
		background-repeat no-repeat
		&:hover
			opacity .75
			
