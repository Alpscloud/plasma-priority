.form
	&__notice
		color rgba($text-color, .5)
		font-size 12px
		margin-top 10px
		
	&-wrapper
		background-color $secondary-color
		padding 55px 100px
		border-radius 360px 360px 360px 0
		
		.form__notice
			color rgba($basic-white-color, .3)
			margin-top 25px
			
		.input
			background-color $basic-white-color
			
		&__description
			color $light-text-color
			margin-bottom 35px
			font-size 16px

.input
	display block
	width 100%
	padding 25px
	text-align left
	background-color $input-bg
	border 1px solid transparent
	font 16px $GReg
	color $text-color
	
	&:hover,
	&:focus
		border-color $accent-color
	&::-webkit-input-placeholder
		font 16px $GReg
		color rgba($text-color, .5)
	&::-moz-placeholder
		font 16px $GReg
		color rgba($text-color, .5)
	&:-moz-placeholder
		font 16px $GReg
		color rgba($text-color, .5)
	&:-ms-input-placeholder
		font 16px $GReg
		color rgba($text-color, .5)
		
	&__wrapper
		margin-bottom 10px
		position relative
		
	&.is-error
		border-color red
		

.inputs__row
	margin-left -5px
	margin-right -5px
	.input__wrapper
		margin 0
		padding 5px
	


.checkbox
	display inline-block
	position relative
	padding-left 30px
	font-size 16px
	transition color .17s ease-in-out
	&:hover
		color $light-accent-color
	&:before
		pseudo()
		position absolute
		left 0
		vertical-center()
		width 20px
		height 20px
		border 1px solid #a3a3a3
		border-radius 2px
		background-position 50% 50%
		background-repeat no-repeat
		background-size 13px 13px
	&__label
		display inline-block
		cursor pointer
		
		input
			display none
			&:checked + span
				&:before
					background-color $accent-color
					border-color $accent-color
					background-image url('../img/icons/svg/correct.svg')

.radio
	display inline-block
	position relative
	padding-left 30px
	font-size 16px
	transition color .17s ease-in-out
	&:hover
		color $light-accent-color
	&:before
		pseudo()
		position absolute
		left 0
		vertical-center()
		width 20px
		height 20px
		border-radius 50%
		border 1px solid #a3a3a3
		
	&:after
		pseudo()
		position absolute
		vertical-center()
		left 5px
		width 10px
		height 10px
		border-radius 50%
		background-color $accent-color
		opacity 0

	&__label
		display inline-block
		cursor pointer
		
		input
			display none
			&:checked + span
				&:before
					border-color $accent-color
				&:after
					opacity 1