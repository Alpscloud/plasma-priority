.slider
	&__loader
		position absolute
		fullSize()
		z-index 10
		background-color $light-color
		transition all .15s ease-in-out
		&:before
			pseudo()
			width 30px
			height 30px
			position absolute
			position-center()
			background url('../img/slider-loader.gif') 50% 50% no-repeat / 30px 30px
			
		&.is-loaded
			opacity 0
			visibility hidden
			pointer-events none
			
	&__pagination
		text-align center
		margin-top 25px
		
		.swiper-pagination-bullet
			outline none
			width 14px
			height 14px
			margin-right 25px
			border 2px solid $basic-white-color
			opacity 1
			background transparent
			&-active
				background $basic-white-color
			&:last-child
				margin-right 0
				
.slider__pagination--dark
	padding-left 15px
	padding-right 15px
	margin-top 0
	
	.swiper-pagination-bullet
		border 2px solid $secondary-color
		opacity 1
		background transparent
		&-active
			background $secondary-color
			

// 
.promo-slider
	.swiper-slide
		height auto
.promo-slide
	min-height 680px
	padding 120px 0
	flex-col-center()
	overflow hidden
	position relative
	height 100%
	&:before
		pseudo()
		position absolute
		fullSize()
		background-color rgba($basic-black-color, .4)
	&__content
		position relative
		text-align center
		font 20px $GReg
		line-height 36px

		
			
		p
			margin-top 30px
			
			max-width 650px
			margin 30px auto 0
			
		.btn
			margin-top 30px
			
		
	&__title
		font 50px $CBold
		
		b, strong, span
			text-transform uppercase
			

// About us
.about-us__slider
	position relative
	.btn__arrow
		position absolute
		vertical-center()
		z-index 1
		background-color transparent
		svg
			fill $basic-white-color
		&--next
			right 10px
			transform  translateY(-50%) scaleX(-1)
		&--prev
			left 10px
		&:hover
			background-color $basic-white-color
			svg
				 fill $accent-color
			
	.swiper-container, .swiper-wrapper, .swiper-slide
		height 100%
.about-us__slide
	border-radius 24px
	display block
	padding-top 0
	width 100%
	height 100%
	
	img
		opacity 1 !important
		visiblity visible !important
			

