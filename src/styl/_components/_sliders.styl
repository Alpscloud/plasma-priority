.feedbacks-slider
	margin-bottom 50px	

.feedback-slide
	background-color $basic-white-color
	border-radius 24px 24px 24px 0
	radius-overflow()
	padding 100px 50px 50px 50px
	position relative
	height 100%
	transition opacity .2s ease-in-out
	opacity .4
	&:before
		pseudo()
		position absolute
		left 50px
		top 40px
		width 53px
		height 40px
		background url('../img/icons/svg/quote.svg') 50% 50% no-repeat / contain
	&__text
		font-size 16px
		line-height 30px
		margin-bottom 30px
		
	&__author
		&-name
			font 18px $GMed
			margin-bottom 15px
			
		&-age
			color rgba($text-color, .3)
			font-family $GMed
			
