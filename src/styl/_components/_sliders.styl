.slider
	&__loader
		position absolute
		fullSize()
		z-index 10
		background-color $light-color
		transition all .15s ease-in-out
		&:before
			pseudo()
			width 30px
			height 30px
			position absolute
			position-center()
			background url('../img/slider-loader.gif') 50% 50% no-repeat / 30px 30px
			
		&.is-loaded
			opacity 0
			visibility hidden
			pointer-events none
			
	&__pagination
		text-align center
		margin-top 25px
		
		.swiper-pagination-bullet
			outline none
			width 14px
			height 14px
			margin-right 25px
			background-color $basic-white-color
			&:last-child
				margin-right 0
				
.slider__pagination--dark
	padding-left 15px
	padding-right 15px
	margin-bottom 70px
	margin-top 0
	
	.swiper-pagination-bullet
		border 2px solid $secondary-color
		opacity 1
		background transparent
		&-active
			background $secondary-color
			
				

.promo-slide
	min-height 100vh
	padding 120px 0
	display flex
	align-items center
	overflow hidden
	&__content
		position relative
		max-width 670px
		background-color rgba($secondary-color, .6)
		border-radius 0 12px 12px 0
		padding 40px 20px 40px 0
		font 18px $GReg
		&:before
			pseudo()
			height 100%
			width 200%
			right 100%
			position absolute
			top 0
			background-color rgba($secondary-color, .6)
			
		
		h3
			font 28px $GReg
			margin-top 30px
			
		p
			margin-top 30px
			
		
	&__title
		font 40px $CBold
		
		b, strong, span
			text-transform uppercase
			

.sertificates-slider
	margin-bottom 20px
	position relative
	&:before
		pseudo()
		height 190px
		background-color $accent-color
		opacity .15
		border-radius 8px
		z-index -1
		horisontal-center()
		bottom 0
		position absolute
		width 1030px
		
	.swiper-wrapper
		align-items center
		
	.swiper-slide
		height auto
		padding 20px 50px 50px 
		

.promo-slider
	position relative
	&__navigation
		position absolute
		position-center()
		z-index 3
		pointer-events none
		display flex
		align-items center
		justify-content space-between
		padding-left 15px
		padding-right 15px
		width 100%
		button
			pointer-events auto
			
	.slider__pagination
		horisontal-center()
		position absolute
		z-index 3
		bottom 100px
		padding-left 15px
		padding-right 15px
		
		.swiper-pagination-bullet
			border 2px solid $accent-color
			opacity 1
			background transparent
			&-active
				background $basic-white-color
		 
			

.feedback-slide
	background-color $basic-white-color
	border-radius 24px 24px 24px 0
	radius-overflow()
	padding 100px 50px 50px 50px
	position relative
	height 100%
	transition opacity .2s ease-in-out
	opacity .4
	&:before
		pseudo()
		position absolute
		left 50px
		top 40px
		width 53px
		height 40px
		background url('../img/icons/svg/quote.svg') 50% 50% no-repeat / contain
	&__text
		font-size 16px
		line-height 30px
		margin-bottom 30px
		
	&__author
		&-name
			font 18px $GMed
			margin-bottom 15px
			
		&-age
			color rgba($text-color, .3)
			font-family $GMed
			
.swiper-container
	*
		box-sizing border-box
		
.feedbacks-slider
	position relative
	.swiper-slide
		width 770px
		height auto
		&-active
			.feedback-slide
				opacity 1
				
	&__navigation
		width 100%
		max-width 1170px
		padding-left 35px
		padding-right 35px
		display flex
		align-items center
		justify-content space-between
		pointer-events none
		position absolute
		position-center()
		z-index 2
		button
			pointer-events auto