// ========== ========== G L O B A L   S T Y L E S ========== ==========
html
	text-size-adjust none
	box-sizing border-box
	&.is-fixed
		overflow hidden
	
*
	padding 0
	margin 0
	box-sizing inherit
	&:after,
	&:before
		box-sizing inherit


body
	font 14px $GReg
	line-height 1.85
	overflow-x hidden
	min-width 320px
	height 100%
	opacity 1
	position relative
	color $text-color
	background-color $body-bg

h1,h2,h3,h4,h5,h6,ul,li
	margin 0
	padding 0

input,
textarea
	outline none
	background transparent
	border none
	box-shadow none
	transition all .17s ease-in-out
	&:focus
		outline none
		
textarea
	resize vertical
	width 100%
	
select
	appearance none
	-webkit-appearance none
	-moz-appearance none
	transition all .17s ease-in-out
	cursor pointer
	&:focus
		outline none

a
	text-decoration none
	outline none
	transition all .17s ease-in-out
	&:hover
		text-decoration none
		
button
	box-shadow none
	border none
	outline none
	cursor pointer
	transition all .17s ease-in-out
	background transparent
	&:focus
		outline none

img
	max-width 100%
	height auto
	

// ========== ========== ========== ========== ========== ==========

// ========== ========== M A I N   S T Y L E S ========== ==========

.disable-hover,
.disable-hover * 
	pointer-events none !important

.clearfix:before,
.clearfix:after
	content " "
	display table

.clearfix:after
	clear both

.gutters
	padding $gutters
.gutter
	&-top
		padding-top $gutter-top
	&-bottom
		padding-bottom $gutter-bottom
	
.w3c
	visibility hidden
	display none
	
.content__wrapper
	overflow hidden
	width 100%
	height 100%
	
.sect-title
	font 40px $CBold
	margin-bottom 50px
	text-transform uppercase
	&-sm
		font 30px $CBold
		margin-bottom 25px
		line-height 1.25
		
	&_with-text
		margin-bottom 20px
		
.sect-description
	font-size 16px
	margin 0 auto 50px auto
	max-width 890px
	
.sect-under-form
	padding-top 235px
	margin-top -180px
		


.text-center
	text-align center
	
.text-left
	text-align left
	
.text-right
	text-align right
	
.basic-white-color
	color $basic-white-color

.basic-black-color
	color $basic-black-color
	
.accent-color
	color $accent-color
	
.content-img
	display block
	margin 0 auto
	max-width 100%
	max-height 100%
	width auto
	height auto
	
.bg
	bg(50%, 50%)
	
.bg-with-overlay
	position relative
	bg(50%, 50%)
	&:before
		pseudo()
		position absolute
		fullSize()
		background-color rgba($bg-overlay-color, $bg-overlay-opacity)
	.container
		position relative
		z-index 2
		
.dark-bg
	background-color $dark-bg
	
.light-color-bg
	background-color $light-color-bg
	
.dark-color-bg
	background-color $dark-color-bg
	
.visually-hidden
	position absolute
	clip rect(0 0 0 0)
	width 1px
	height 1px
	margin -1px
	z-index -999
	opacity 0
	visiiblity hidden



.b-radius
	&-sm
		border-radius 8px
	&-lg
		border-radius 16px
		

.content
	*
		&:first-child
			margin-top 0
		&:last-child
			margin-bottom 0
	strong, b
		font-family $GBold
		text-transform uppercase
		color $accent-color
		
	p,ol, ul
		margin-bottom 30px
		
	h1,h2,h3,h4,h5,h6
		color $text-color
		
	h1,h2
		font 30px $CBold
		margin-bottom 30px
		text-transform uppercase
		
	h3
		font 26px $CBold
		margin-bottom 30px
		text-transform uppercase
		
	h4
		font 22px $CBold
		margin-bottom 25px
		
	h5
		font 20px $CBold
		margin-bottom 20px
		
	h6
		font 18px $CBold
		margin-bottom 20px
		
		

.thumbnail
	display block
	position relative
	overflow hidden
	padding-top 65%
	img
		display block
		width 100%
		height 100%
		object-fit cover
		position absolute
		position-center()

