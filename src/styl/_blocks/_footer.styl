.footer
	background-color $footer-bg
	padding 60px 0
	color $light-text-color
	a
		color inherit
		&:hover
			text-decoration underline
	&__col
		.row
			margin-left -10px
			margin-right -10px
			
		p
			padding 0 10px
			
.copyright
	font-size 14px
	margin-bottom 10px
	padding 0 !important
	a
		color $accent-color
		border-bottom 1px solid
		text-decoration none
		&:hover
			text-decoration none
			
.footer-nav
	margin-top 30px
	padding-top 30px
	border-top 1px solid $basic-white-color
	ul
		display flex
		justify-content space-between
	
	a
		color $basic-white-color
		opacity .6
		border-bottom 1px solid transparent
		text-transform uppercase
		font-size 14px
		&:hover
			text-decoration none
			opacity 1
			border-color rgba($basic-white-color,.6)